<% if page.current? %>
  <li class='active'>
    <%= content_tag :a, page, remote: remote, rel: (page.next? ? 'Prox' : (page.prev? ? 'Voltar' : nil)) %>
  </li>
<% else %>
  <li>
    <%= link_to page, url, remote: remote, rel: (page.next? ? 'Prox' : (page.prev? ? 'Voltar' : nil)) %>
  </li>
<% end %>
