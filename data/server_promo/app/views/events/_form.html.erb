<div class="container">
<h1 align="center">Criar Evento</h1>
<%= form_with(model: event, local: true, :html => {class: "form-horizontal", role: "form"}) do |form| %>

 <div class="form-group">
        <div class="control-label col-sm-2">
            <%= form.label "Nome do Evento" %>
        </div>
        <div class="col-sm-8">
            <%= form.text_field :name, id: :event_name, class: "form-control", placeholder: "Nome do Evento", autofocus: true %>
        </div>

    </div>

  <div class="form-group">
        <div class="control-label col-sm-2">
            <%= form.label "Descrção do Evento" %>
        </div>
        <div class="col-sm-8">
            <%= form.text_area :description, id: :event_name, class: "form-control", placeholder: "Descrição do Evento", autofocus: true %>
        </div>

    </div>

<div class="form-group">
        <div class="control-label col-sm-2">
            <%= form.label "Data" %>
        </div>
        <div class="col-sm-8">
            <%= form.date_field :date, id: :event_date, class: "form-control" %>
        </div>

    </div>

<div class="form-group">
        <div class="control-label col-sm-2">
            <%= form.label "Início Dia" %>
        </div>
        <div class="col-sm-8">
            <%= form.date_field :start_date, id: :event_start_date, class: "form-control" %>
        </div>

    </div>

    <div class="form-group">
        <div class="control-label col-sm-2">
            <%= form.label "Término Dia" %>
        </div>
        <div class="col-sm-8">
            <%= form.date_field :end_date, id: :event_end_date, class: "form-control" %>
        </div>

    </div>

<div class="form-group">
        <div class="control-label col-sm-2">
            <%= form.label "Início" %>
        </div>
        <div class="col-sm-8">
            <%= form.time_field :start_time, id: :event_start_time, class: "form-control" %>
        </div>

    </div>

<div class="form-group">
        <div class="control-label col-sm-2">
            <%= form.label "Término" %>
        </div>
        <div class="col-sm-8">
            <%= form.time_field :end_time, id: :event_end_time, class: "form-control" %>
        </div>

    </div>
<div class="form-group">
        <div class="control-label col-sm-2">
    <%= form.label "Imagem" %>
    </div>
<div class="col-sm-8">
    <%= form.file_field :avatar %>
  </div>
</div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <%= form.submit "Salvar", class: 'btn btn-primary btn-lg' %>
        </div>
    </div>

  <% end %>
</div>