<div class="container">
<h1 align="center">Criar Coleção</h1>
    <%= form_with(model: group, local: true, :html => {class: "form-horizontal", role: "form"}) do |f| %>

    <div class="form-group">
        <div class="control-label col-sm-2">
            <%= f.label :name %>
        </div>
        <div class="col-sm-8">
            <%= f.text_field :name, id: :group_name, class: "form-control", placeholder: "Nome da Coleção", autofocus: true %>
        </div>

    </div>

<div class="form-group">
    <%= f.label :avatar %>
    <%= f.file_field :avatar, class: "form-control" %>
</div>

<div class="form-group">
        <div class="control-label col-sm-2">
            <%= f.label :description %>
        </div>
        <div class="col-sm-8">
            <%= f.text_field :description, id: :group_description, class: "form-control", placeholder: "Descrição da Coleção", autofocus: true %>
        </div>

    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit "Salvar", class: 'btn btn-primary btn-lg' %>
        </div>
    </div>
<% end %>

    <div class="col-xs-4 col-xs-offset-4">
</div>
</div>