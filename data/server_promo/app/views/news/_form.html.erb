<%= form_with(model: news, local: true, :html => {class: "form-horizontal", role: "form"})  do |form| %>

  <% if news.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(news.errors.count, "error") %> prohibited this news from being saved:</h2>

      <ul>
      <% news.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="container">
<h1 align="center">Novidades</h1>
<div class="form-group">
        <div class="control-label col-sm-2">
            <%= form.label "Título" %>
        </div>
        <div class="col-sm-8">
            <%= form.text_field :title, id: :news_title, class: "form-control", placeholder: "Título", autofocus: true %>
        </div>

    </div>
<div class="form-group">
  <div class="control-label col-sm-2">
    <%= form.label "Texto" %>
    </div>
<div class="col-sm-8">
    <%= form.text_area :body, class: "form-control" %>
  </div>
</div>
<div class="form-group">
        <div class="control-label col-sm-2">
    <%= form.label "Imagem" %>
    </div>
<div class="col-sm-8">
    <%= form.file_field :avatar %>
  </div>
</div>
<div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <%= form.submit "Salvar", class: 'btn btn-primary btn-lg' %>
        </div>
    </div>
<% end %>
</div>